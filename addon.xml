<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.video.random.recursive" name="Bidon Random Recursive Player" version="1.0.0" provider-name="YourName">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>

    <extension point="xbmc.python.pluginsource" library="main.py">
        <provides>video</provides>
    </extension>

    <extension point="xbmc.python.script" library="main.py">
        <provides>executable</provides>
    </extension>

    <extension point="xbmc.addon.metadata">
        <summary>Play videos recursively in random order</summary>
        <description>Scans a directory and plays all videos randomly from all subfolders.</description>
        <license>MIT</license>
        <website>Kodi.tv</website>
        <email>seranov@yandex.ru</email>
        <assets>
            <icon>icon.png</icon>
        </assets>
        <platform>all</platform>
    </extension>
</addon>