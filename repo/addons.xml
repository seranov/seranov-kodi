<?xml version='1.0' encoding='utf-8'?>
<addons>
    <addon id="context.screenshots" name="Bidon Popup Screenshots" version="1.0.5" provider-name="seranov">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
            <import addon="script.module.kodi-six" version="0.1.3.1" />
            <import addon="script.module.routing" version="0.2.3+matrix.1" />
        </requires>
        <extension point="kodi.context.item">
            <menu id="kodi.core.main">
                <item library="contextitem_images.py">
                    <label>$ADDON[context.screenshots 32000]</label>
                    <visible>true</visible>
                </item>
            </menu>
        </extension>
        <extension point="xbmc.python.script" library="addon.py">
            <provides>executable</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Popup Screenshots</summary>
            <summary lang="ru_RU">Всплывающие скриншоты</summary>
            <description lang="en_GB">Show slideshow of local images and optionally file_id.diz file text content</description>
            <description lang="ru_RU">Показывает слайдшоу локальных изображений и опционально текстовое содержимое файла file_id.diz</description>
            <disclaimer lang="en_GB" />
            <language />
            <platform>all</platform>
            <license>GNU General Public License, v2</license>
            <forum />
            <website>https://github.com/seranov/kodi-play-random</website>
            <email>seranov@yandex.ru</email>
            <assets>
                <icon>icon.png</icon>
                <fanart>fanart.jpg</fanart>
            </assets>
        </extension>
    </addon>
    <addon id="plugin.video.random.recursive" name="Bidon Random Recursive Player" version="1.0.0" provider-name="seranov">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="main.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.python.script" library="main.py">
            <provides>executable</provides>
        </extension>
        <extension point="kodi.context.item">
            <menu id="kodi.core.main">
                <item library="main.py" args="play-random-recursive">
                    <label>$ADDON[plugin.video.random.recursive 32000]</label>
                    <visible>true</visible>
                </item>
            </menu>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Play videos recursively in random order</summary>
            <summary lang="ru_RU">Воспроизведение видео рекурсивно в случайном порядке</summary>
            <description lang="en_GB">Scans a directory and plays all videos randomly from all subfolders.</description>
            <description lang="ru_RU">Сканирует директорию и воспроизводит все видео в случайном порядке из всех подпапок.</description>
            <disclaimer lang="en_GB" />
            <language />
            <platform>all</platform>
            <license>MIT</license>
            <forum />
            <website>https://github.com/seranov/kodi-play-random</website>
            <email>seranov@yandex.ru</email>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>
    <addon id="plugin.video.unified.browser" name="Unified Video Browser" version="1.0.0" provider-name="seranov">
        <requires>
            <import addon="xbmc.python" version="3.0.0" />
            <import addon="script.module.pil" version="1.1.7" />
        </requires>
        <extension point="xbmc.python.pluginsource" library="main.py">
            <provides>video</provides>
        </extension>
        <extension point="xbmc.addon.metadata">
            <summary lang="en_GB">Unified video browser showing all videos, movies and series</summary>
            <summary lang="ru_RU">Единый браузер видео, показывающий все видео, фильмы и сериалы</summary>
            <description lang="en_GB">Browse all video content in a unified list without separation by content type. Shows video files, movies (folders with one or more video files) and series in a single interface with filtering by years, genres, tags and keywords.</description>
            <description lang="ru_RU">Просматривайте весь видеоконтент в едином списке без разделения по типам. Показывает видеофайлы, фильмы (папки с одним или несколькими видеофайлами) и сериалы в едином интерфейсе с фильтрацией по годам, жанрам, тегам и ключевым словам.</description>
            <disclaimer lang="en_GB">Requires Kodi video sources to be configured</disclaimer>
            <disclaimer lang="ru_RU">Требуется настройка источников видео в Kodi</disclaimer>
            <language />
            <platform>all</platform>
            <license>MIT</license>
            <forum />
            <website>https://github.com/seranov/kodi-play-random</website>
            <email>seranov@yandex.ru</email>
            <assets>
                <icon>icon.png</icon>
            </assets>
        </extension>
    </addon>
